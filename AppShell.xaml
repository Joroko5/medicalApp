<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MedicalInventoryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedicalInventoryApp"
  
    Title="Medical Inventory App">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Title="Home"
                      Route="home" 
                      ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Inventory"
                      Route="NewPage1" 
                      ContentTemplate="{DataTemplate local:NewPage1}"/>
        <ShellContent Title="Search" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Update Item" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Remove Item" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Search Item" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Export Inventory" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Import Inventory" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Print Inventory" ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
</Shell>
